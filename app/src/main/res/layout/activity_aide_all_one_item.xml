<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".AideAllOneItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/aide"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:fontFamily="sans-serif-black"
            android:gravity="bottom|center_horizontal"
            android:text=""
            android:textColor="#2196F3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/aide1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Nom du Tuteur:"
            android:textColor="#2196F3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/nomTut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom Tuteur"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/aide11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Nom d'enfant:"
            android:textColor="#2196F3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/nomEnf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom de l'enfant"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/aide111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="GSM du tuteur:"
            android:textColor="#2196F3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/phoone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/aide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Email du tuteur:"
            android:textColor="#2196F3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/emaiil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/aide3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Message:"
            android:textColor="#2196F3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>